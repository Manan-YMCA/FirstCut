<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleClubActivity">

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Manan"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/club_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/club_name"
        android:layout_centerHorizontal="true"
        android:text="The coding society"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/club_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/club_description"
        android:fontFamily="serif"
        android:text="Rounds"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/club_rounds"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROUND 1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic"

            />

        <ImageView
            android:id="@+id/selected"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/r1"
            android:layout_margin="10dp"
            android:src="@drawable/icon_selected" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/club_round_circles"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/not_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:src="@drawable/icon_not_selected" />

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

</RelativeLayout>