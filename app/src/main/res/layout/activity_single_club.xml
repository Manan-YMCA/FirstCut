<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleClubActivity">

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manan"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:layout_below="@id/club_name"
        android:id="@+id/club_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding club"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:layout_below="@id/club_description"
        android:id="@+id/club_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rounds"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/club_round_circles"
        android:layout_below="@id/club_rounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</RelativeLayout>