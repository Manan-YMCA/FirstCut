<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleClubActivity">

    <TextView
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manan"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:layout_below="@id/club_name"
        android:id="@+id/club_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The coding society"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:layout_below="@id/club_description"
        android:id="@+id/club_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rounds"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="serif"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/club_rounds"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:text="ROUND 1"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"

        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/selected"
        android:src="@drawable/icon_selected"
        android:layout_below="@+id/r1"
        android:layout_margin="10dp"
        />



    <android.support.v7.widget.RecyclerView>
        android:id="@+id/club_round_circles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        <ImageView
            android:id="@+id/not_selected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_not_selected"
            android:layout_margin="20dp"
            />

    </android.support.v7.widget.RecyclerView>







</RelativeLayout>

</RelativeLayout>