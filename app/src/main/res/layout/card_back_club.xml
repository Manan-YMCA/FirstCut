<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp" android:layout_height="200dp"
    android:id="@+id/single_club_back"
    android:orientation="vertical">
    <TextView
        android:id="@+id/single_club_club_name"
        android:text="ClubName"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ananya"/>
    <TextView
        android:id="@+id/single_club_description"
        android:text="Anaya is a 21st century coinage with uncertain origins. For one, it could have developed from the masculine Hebrew name “Anaiah” which means “Yahweh (God) answers”"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ananya"/>
</LinearLayout>